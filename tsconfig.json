{
	"compilerOptions": {
		"moduleResolution": "node",
		"outDir": "./lib",
		"allowJs": true,
		"checkJs": true,
		"target": "es2017",
		"lib": ["es2017", "dom"],
		"strict": true,
		"esModuleInterop": true,
		"declaration": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"module": "commonjs",
		"jsx": "preserve",
		"baseUrl": "./src",
		"paths": {
			"shared": ["src/shared"]
		},
		"resolveJsonModule": true
	},
	"include": ["./src/**/*", "src/shared/assets/definitions/decs.d.ts"],
	"exclude": ["./src/__tests__", "./src/__mocks__"]
}
