{
	"name": "abtasty-debugger",
	"version": "1.1.3",
	"description": "Browser extension that simplifies the debugging of A/B tests from AB Tasty and adds useful informations",
	"homepage": "https://github.com/yoriiis/abtasty-debugger",
	"bugs": "https://github.com/yoriiis/abtasty-debugger/issues",
	"repository": "https://github.com/yoriiis/abtasty-debugger.git",
	"license": "MIT",
	"author": "Yoriiis aka Joris DANIEL",
	"scripts": {
		"build:browser": "rm -rf ./web/dist/ && webpack --mode=production --config=webpack.config.js --env target=browser",
		"build:chrome": "rm -rf ./web/dist/ && webpack --mode=production --config=webpack.config.js --env target=chrome",
		"inspect": "node --inspect node_modules/webpack/bin/webpack.js --config webpack.config.js --mode=development",
		"release:browser": "rm -rf ./web/dist/ && webpack --mode=production --config=webpack.config.js --env target=browser --env release=true",
		"release:chrome": "rm -rf ./web/dist/ && webpack --mode=production --config=webpack.config.js --env target=chrome --env release=true",
		"start:chrome": "web-ext run --target=chromium --source-dir ./web/dist",
		"start:firefox": "web-ext run --source-dir ./web/dist",
		"test": "jest --verbose --coverage",
		"test:eslint": "eslint . --ignore-pattern dist --ignore-pattern lib",
		"test:eslint:fix": "eslint . --ignore-pattern dist --fix --ignore-pattern lib",
		"test:markdown": "markdownlint '**/*.md' --ignore node_modules",
		"test:stylelint": "stylelint './src/**/*.css'",
		"test:type-check": "tsc --noEmit",
		"test:watch": "jest --watchAll --coverage",
		"watch:browser": "rm -rf ./web/dist/ && webpack --mode=development --config=webpack.config.js --env target=browser",
		"watch:chrome": "rm -rf ./web/dist/ && webpack --mode=development --config=webpack.config.js --env target=chrome",
		"web-ext:lint": "web-ext lint --source-dir ./web/dist"
	},
	"dependencies": {
		"validate-target": "^2.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.12.17",
		"@babel/plugin-proposal-class-properties": "^7.12.13",
		"@babel/plugin-transform-react-jsx": "^7.12.17",
		"@babel/preset-env": "^7.12.17",
		"@types/chrome": "0.0.133",
		"@types/jest": "^26.0.20",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.2.2",
		"babel-plugin-dynamic-import-node": "^2.3.3",
		"chunks-webpack-plugin": "^7.0.1",
		"copy-webpack-plugin": "^7.0.0",
		"css-loader": "^5.0.2",
		"css-minimizer-webpack-plugin": "^1.2.0",
		"eslint": "^7.20.0",
		"eslint-config-standard": "^16.0.2",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-promise": "^4.3.1",
		"eslint-plugin-react": "^7.22.0",
		"eslint-plugin-standard": "^5.0.0",
		"html-webpack-plugin": "^5.2.0",
		"jest": "^26.6.3",
		"jest-transform-stub": "^2.0.0",
		"jsx-dom": "^7.0.0-beta.1",
		"markdownlint-cli": "^0.26.0",
		"mini-css-extract-plugin": "^1.3.8",
		"postcss": "^8.2.6",
		"postcss-custom-media": "^8.0.0",
		"postcss-custom-properties-transformer": "^1.0.0",
		"postcss-import": "^14.0.0",
		"postcss-loader": "^5.0.0",
		"postcss-nested": "^5.0.3",
		"postcss-preset-env": "^6.7.0",
		"postcss-url": "^10.1.1",
		"prettier": "^2.2.1",
		"progress-bar-webpack-plugin": "^2.1.0",
		"stylelint": "^13.10.0",
		"stylelint-config-standard": "^20.0.0",
		"stylelint-prettier": "^1.1.2",
		"terser-webpack-plugin": "^5.1.1",
		"ts-jest": "^26.5.3",
		"ts-loader": "^8.0.17",
		"typescript": "^4.2.3",
		"web-ext": "^6.0.0",
		"webpack": "^5.23.0",
		"webpack-cli": "^4.5.0"
	},
	"engines": {
		"node": ">=12.14.0"
	}
}
