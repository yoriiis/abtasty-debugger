{
	"name": "abtasty-debugger",
	"version": "1.3.0",
	"description": "Browser extension that simplifies the debugging of A/B tests from AB Tasty and adds useful informations",
	"homepage": "https://github.com/yoriiis/abtasty-debugger",
	"bugs": "https://github.com/yoriiis/abtasty-debugger/issues",
	"repository": "https://github.com/yoriiis/abtasty-debugger.git",
	"license": "MIT",
	"author": "Yoriiis aka Joris DANIEL",
	"scripts": {
		"build:browser": "rm -rf ./web/ && webpack --mode=production --config=config/webpack.config.js --env target=browser",
		"build:chrome": "rm -rf ./web/ && webpack --mode=production --config=config/webpack.config.js --env target=chrome",
		"dev:browser": "rm -rf ./web/ && webpack serve --mode=development --config=config/webpack.config.js --env target=browser",
		"dev:chrome": "rm -rf ./web/ && webpack serve --mode=development --config=config/webpack.config.js --env target=chrome",
		"inspect": "node --inspect node_modules/webpack/bin/webpack.js --config webpack.config.js --mode=development",
		"release:browser": "rm -rf ./web/ && webpack --mode=production --config=config/webpack.config.js --env target=browser --env release=true",
		"release:chrome": "rm -rf ./web/ && webpack --mode=production --config=config/webpack.config.js --env target=chrome --env release=true",
		"start:chrome": "web-ext run --target=chromium --source-dir ./web",
		"start:firefox": "web-ext run --source-dir ./web",
		"test": "jest --config config/jest.config.js --verbose --coverage",
		"test:eslint": "eslint . --config config/.eslintrc.js --ignore-pattern web --ignore-pattern lib",
		"test:markdown": "markdownlint '**/*.md' --ignore node_modules",
		"test:stylelint": "stylelint './src/**/*.css' --config ./config/stylelint.config.js",
		"test:type-check": "tsc --noEmit",
		"test:watch": "jest --config config/jest.config.js --watchAll --coverage",
		"watch:browser": "rm -rf ./web/ && webpack --watch --mode=development --config=config/webpack.config.js --env target=browser",
		"watch:chrome": "rm -rf ./web/ && webpack --watch --mode=development --config=config/webpack.config.js --env target=chrome",
		"web-ext:lint": "web-ext lint --source-dir ./web"
	},
	"prettier": "./config/prettier.config.js",
	"dependencies": {
		"costro": "^1.0.3",
		"validate-target": "^2.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.20.5",
		"@babel/plugin-proposal-class-properties": "^7.16.0",
		"@babel/plugin-transform-react-jsx": "^7.19.0",
		"@babel/preset-env": "^7.20.2",
		"@types/chrome": "^0.0.204",
		"@types/jest": "^29.2.4",
		"@types/react": "^18.0.26",
		"@types/react-dom": "^18.0.9",
		"@typescript-eslint/eslint-plugin": "^5.46.1",
		"@typescript-eslint/parser": "^5.46.1",
		"babel-loader": "^9.1.0",
		"babel-plugin-dynamic-import-node": "^2.3.3",
		"copy-webpack-plugin": "^11.0.0",
		"css-loader": "^6.7.3",
		"css-minimizer-webpack-plugin": "^4.2.2",
		"eslint": "^8.29.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-n": "^15.6.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-react": "^7.31.11",
		"html-webpack-plugin": "^5.5.0",
		"jest": "^29.3.1",
		"jest-environment-jsdom": "^29.3.1",
		"jest-transform-stub": "^2.0.0",
		"jsx-dom": "^8.0.3",
		"markdownlint-cli": "^0.32.2",
		"mini-css-extract-plugin": "^2.7.2",
		"postcss": "^8.4.20",
		"postcss-custom-media": "^9.0.1",
		"postcss-custom-properties-transformer": "^1.0.0",
		"postcss-import": "^15.1.0",
		"postcss-loader": "^7.0.2",
		"postcss-nested": "^6.0.0",
		"postcss-preset-env": "^7.8.3",
		"postcss-url": "^10.1.3",
		"prettier": "^2.8.1",
		"stylelint": "^14.16.0",
		"stylelint-config-prettier": "^9.0.4",
		"stylelint-config-standard": "^29.0.0",
		"stylelint-prettier": "^2.0.0",
		"terser-webpack-plugin": "^5.3.6",
		"ts-jest": "^29.0.3",
		"ts-loader": "^9.4.2",
		"typescript": "^4.9.4",
		"web-ext": "^7.4.0",
		"webpack": "^5.75.0",
		"webpack-cli": "^5.0.1",
		"webpack-dev-server": "^4.11.1"
	},
	"engines": {
		"node": ">=18"
	}
}
